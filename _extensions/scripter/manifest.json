{
    "manifest_version": 3,
    "name": "Charlie",
    "version": "1.0",
    "description": "Run custom scripts on any webpage.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "content_scripts": [
    {
      "matches": ["*://*.reddit.com/*"],
      "js": ["reddit.js"],
      "run_at": "document_end" 
    }
  ],
    "action": {
      "default_popup": "",
      "default_icon": {
      }
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  